                            <TextBlock Canvas.Left="-15" Canvas.Top="60" Text="Knowledge base" />
                        </Canvas>
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</UserControl>

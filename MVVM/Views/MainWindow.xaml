                </Viewbox>
                <TextBlock Text="Arch" FontSize="20" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="20,0">
                <Button Content="Explore" Height="25" 
                        Margin="0,10,0,0" 
                        Command="{Binding NavigateExploreViewCommand}" />
                <Button Content="Exchange" Height="25" 
                        Margin="0,10,0,0"
                        Command="{Binding NavigateExchangeViewCommand}" />
                <Button Content="Settings" Height="25" Margin="0,10,0,0" 
                        Command="{Binding NavigateSettingsViewCommand}" />
                <Button Content="Support" Height="25" Margin="0,10,0,0" 
                        Command="{Binding NavigateSupportViewCommand}" />
            </StackPanel>
        </StackPanel>
           
        <ContentControl Grid.Column="1" 
                        Content="{Binding Navigation.CurrentView}">
            
        </ContentControl>
    </Grid>
</Window>

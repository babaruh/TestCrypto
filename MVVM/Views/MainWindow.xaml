        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestCrypto"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="600" MinWidth="1400">
